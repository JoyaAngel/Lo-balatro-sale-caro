@model IEnumerable<Producto>

@{
    ViewData["Title"] = "Tienda de Videojuegos";
}

<div class="text-center">
    <h1 class="display-4">Bienvenido a nuestra tienda de videojuegos</h1>
</div>

<div class="container mt-5">
    <div class="row">
        @foreach (var producto in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="@producto.ImagenUrl" class="card-img-top" alt="@producto.Nombre" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@producto.Nombre</h5>
                        <p class="card-text">@producto.Descripcion</p>
                        <p class="text-muted">@producto.Plataforma</p>
                    </div>
                    <div class="card-footer">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="h5 mb-0">@producto.Precio.ToString("C")</span>
                            <a href="#" class="btn btn-primary">Comprar</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>